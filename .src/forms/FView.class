Public Sub Form_Open()

    Me.Center()

End

Public Sub btnCancel_Click()

    tmrUpdate.Stop()
    Me.Close()

End

Public Sub swbAutoUpdate_Click()

    If swbAutoUpdate.Value Then
        tmrUpdate.Start()
        btnUpdate.Enabled = False
    Else
        tmrUpdate.Stop()
        btnUpdate.Enabled = True
    Endif

End
